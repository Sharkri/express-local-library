extends layout

block content
  h1 #{ title }

  form(method="POST", action="")
    .form-group
      label(for="name") Genre:
      input#name.form-control(
        type="text",
        placeholder="Fantasy, Poetry etc.",
        name="name",
        value=genre ? genre.name : "",
        minlength="3",
        required
      )
    button.btn.btn-primary(type="submit") Submit

  if errors
    ul
      each error in errors
        li!= error.msg
